<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentStart="true">
        <ImageView
            android:alpha=".87"
            android:id="@+id/iv_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_margin="6dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp"
            android:src="@drawable/ic_close_black_24dp" />
        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_close"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:inputType="textCapWords"
            android:hint="Username"
            android:paddingStart="8dp"
            android:textColor="#212121"
            android:backgroundTint="#BDBDBD"
            android:textColorHint="#BDBDBD" />
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_user"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:paddingStart="8dp"
            android:textColor="#212121"
            android:backgroundTint="#BDBDBD"
            android:textColorHint="#BDBDBD" />
        <EditText
            android:id="@+id/et_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:gravity="start"
            android:hint="Additional information (optional)"
            android:inputType="textMultiLine"
            android:minHeight="144dp"
            android:paddingStart="8dp"
            android:textColor="#212121"
            android:backgroundTint="#BDBDBD"
            android:textColorHint="#BDBDBD" />
        <TextView
            android:id="@+id/tv_allError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_userError"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="Specify a username and password."
            android:textColor="#B71C1C" />
        <TextView
            android:id="@+id/tv_userError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_passNumAndLetError"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="Username taken."
            android:textColor="#B71C1C" />
        <TextView
            android:id="@+id/tv_passNumAndLetError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_passLengthError"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="Passwords must only use numbers and letters, with at least one of each."
            android:textColor="#B71C1C" />
        <TextView
            android:id="@+id/tv_passLengthError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_passRepeatError"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="Passwords must be 5-12 characters long."
            android:textColor="#B71C1C" />
        <TextView
            android:id="@+id/tv_passRepeatError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="invisible"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="Passwords must not contain any repeated sequence of characters."
            android:textColor="#B71C1C" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:background="#3F51B5">
        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_create"
            android:layout_alignBottom="@+id/tv_create"
            android:layout_marginRight="16dp"
            android:layout_toStartOf="@+id/tv_create"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:minWidth="48dp"
            android:padding="12dp"
            android:text="CLEAR"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/tv_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:minWidth="48dp"
            android:padding="12dp"
            android:text="CREATE" />
    </RelativeLayout>
</RelativeLayout>